          <view class="wb100 F32 Fblack lh50rpx">
          测试结果：{{title}}
          </view>

          <view class="clear1"></view>

          <view class="wb100 F28 Fgray-3 lh40rpx">
            {{res}}
          </view>
          
          <view class="clear1"></view>
          
          <view class="clear1"></view>

          <view class="w500rpx center">

            <button open-type='share' class=" w500rpx h100rpx lh100rpx radius20 warpper-green Fwhite text-center F32">分享给好友</button>
            
          </view>

        </view>

      </view>
    </view>

  </view>
  

</view>
