            <view class="w80rpx h80rpx fl">
              <image src='{{user.head}}' class='w80rpx h80rpx radius50per'></image>
            </view>

            <view class="w300rpx lh80rpx mal20 fl F32">
              {{user.name}}
            </view >

          </view>

