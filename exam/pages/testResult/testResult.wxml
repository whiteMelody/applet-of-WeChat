      <view class="wb100 radius20 warpper-white" style='box-shadow: 0rpx 0rpx 50rpx rgba(0, 0, 0, .25)'>
        
        <view class="wb100 relative">
          <view style='height:517rpx; line-height: 517rpx; z-index:1; background:rgba(0,0,0,.5)' class='absolute Fwhite F32 text-center wb100'>
            {{paperName}}
          </view>
        
          <image src='/images/cover1.jpg' class='wb100' style='height:517rpx;'></image>
        </view>

        <view class="pa30">
          
